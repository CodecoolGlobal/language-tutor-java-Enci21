<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".addword.AddWordActivity">

    <EditText
        android:id="@+id/english_word"
        style="@style/edit_text"
        android:hint="@string/enter_the_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="@string/enter_the_word" />

    <Button
        android:id="@+id/save_button"
        style="@style/button"
        android:text="@string/save_btn_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation" />

    <EditText
        android:id="@+id/translation"
        style="@style/edit_text"
        android:hint="@string/enter_the_translation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/english_word"
        android:autofillHints="@string/enter_the_translation" />
</androidx.constraintlayout.widget.ConstraintLayout>