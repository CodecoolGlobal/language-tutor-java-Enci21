<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="time_picker_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/textView_time</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:background">@color/timePickerButton</item>
    </style>

    <style name="time_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="reminder_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>